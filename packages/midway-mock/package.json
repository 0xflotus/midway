{
  "name": "midway-mock",
  "version": "0.0.1",
  "eggPlugin": {
    "name": "midway-mock"
  },
  "description": "mock server for midway",
  "main": "dist/index",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && ../../node_modules/.bin/tsc",
    "lint": "../../node_modules/.bin/tslint --format prose -c ../../tslint.json src/**/*.ts test/**/*.ts",
    "test": "npm run lint && npm run clean && midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "ci": "midway-bin test"
  },
  "keywords": [
    "midway",
    "IoC",
    "mock",
    "plugin"
  ],
  "files": [
    "dist",
    "d.ts"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.10.0",
    "midway-bin": "^0.0.1"
  },
  "dependencies": {
    "egg-mock": "^3.17.3",
    "midway-context": "^0.0.1",
    "debug": "^3.1.0",
    "inflection": "^1.12.0",
    "is-type-of": "^1.2.0",
    "globby": "^8.0.0",
    "extend": "^3.0.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  }
}
