{
  "name": "midway-web",
  "version": "0.0.1",
  "description": "Midway Web Scene",
  "main": "dist/index",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && ../../node_modules/.bin/tsc",
    "lint": "../../node_modules/.bin/tslint --format prose -c ../../tslint.json src/**/*.ts test/**/*.ts",
    "test": "npm run lint && npm run clean && midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "ci": "npm run test",
    "clean": "find . -type d -name 'logs' -or -name 'run' -or -name '.nodejs-cache' | xargs rm -rf"
  },
  "keywords": [
    "midway",
    "IoC",
    "web",
    "scene"
  ],
  "files": [
    "dist",
    "d.ts",
    "config"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.109",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.10.0",
    "egg-mock": "^3.17.2",
    "midway-bin": "^0.0.1"
  },
  "dependencies": {
    "egg": "^2.9.1",
    "midway-context": "^0.0.1",
    "debug": "^3.1.0",
    "inflection": "^1.12.0",
    "is-type-of": "^1.2.0",
    "globby": "^8.0.0",
    "extend": "^3.0.0"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  }
}
